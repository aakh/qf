<h2><%=h @concept.name %></h2>
<table>
  <tr>
    <td width=100%>
      <table>
        <% @concept.entities.each do |entity| %>
          <tr>
            <td>
              <li> <%= link_to entity.name, entity_path(:id => entity) %>
              (
              $<%= FactValue.get_value(Dimension.find_by_name('+Price'), entity).value %>
              )
            </td>
            <% if role? 'manager' %>
              <td>
                [
                <%= link_to 'Edit', edit_entity_path(entity) %> |
                <%= link_to 'Delete', entity, :confirm => 'Are you sure?', :method => :delete %> 
                ]
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </td>
    <td>
      <div class="dimensions round">
        <u><h4>Associated values:</h4></u>
        <% @concept.dimensions.each do |dim| %>
          <% if dim.valuable_type == "Opinion" or role? 'staff' %>
            <li><%= dim.name %>
          <% end %>
        <% end %>
      </div>
    </td>
  </tr>
</table>

<%= link_to "Back to Menu", concepts_path %>
  