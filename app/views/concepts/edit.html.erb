<h2>Edit Menu Category</h2>

<% semantic_form_for(@concept) do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :dimensions , :collection => Dimension.fact_dimensions, :label => "Facts" %>
    <%= f.input :dimensions , :collection => Dimension.opinion_dimensions, :label => "Opinions" %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Update" %>
  <% end %>
<% end %>