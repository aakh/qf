<h1>Edit profile</h1>

<% semantic_form_for @user do |f| %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password, :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <hr>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthday %>
    <%= f.input :country %>
    <% if current_user.has_role? 'Administrator' %>
      <hr>
      <%= f.input :roles %>
    <% end %>
  <% end %>
  <%= f.buttons %>
<% end %>