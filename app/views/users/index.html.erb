<h2>Listing users</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
    <td><%= link_to "Delete", user, :confirm => "Are you sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>
