<p>
  <b>Name:</b>
  <%=h @user.full_name %>
  <br>
  <b>Country:</b>
  <%=h @user.country %>
  <br>
  <b>Entities rated:</b>
  <%= @num_ratings %>
  <ul>
  <% @ratings.each do |r| %>
    <li> Rated <%= link_to r.entity.name, entity_path(r.entity) %> <%= "%.1f"% @user.rating_for(r.entity) %>/10</li>
  <% end %>
  </ul>
  
  
  <%= render :partial => "shared/show_beliefs", :locals => { :user => @user, :beliefs => @beliefs } %>
</p>

<%= link_to "Edit", edit_user_path(@user) %>