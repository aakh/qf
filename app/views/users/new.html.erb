<h2>Sign up</h2>

<% semantic_form_for @user do |f| %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <hr>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthday %>
    <%= f.input :country %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Sign up" %>
  <% end %>
<% end %>
