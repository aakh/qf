<h2>Sign up</h2>


<% semantic_form_for @user do |f| %>
  <div class="ratings round">
    <%= label_tag "Aswer this CAPTCHA question to prove you're not a robot before signing up." %>
    <br>
    <%= h(@question) %>
    <br>
    <%= text_field_tag :captcha_user_answer %>
    <% @answers.each do |a| %>
      <%= hidden_field_tag "captcha_answers[]", a %>
    <% end %>
  </div>
  <br><br>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <hr>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthday, :start_year => Time.now.year - 100, :end_year => Time.now.year %>
    <%= f.input :country %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Sign up" %>
  <% end %>
<% end %>
