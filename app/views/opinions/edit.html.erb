<h2>Edit Opinion</h2>
<% semantic_form_for @opinion do |f| %>
  <% f.inputs :for => :dimension do |dim| %> 
    <%= dim.input :name %>
    <%= dim.input :desc %>
    <%= dim.input :concepts %>
  <% end %>
  <%= f.inputs :min, :max %>
  <% f.buttons do %>
    <%= f.commit_button "Update" %>
  <% end %>
<% end %>