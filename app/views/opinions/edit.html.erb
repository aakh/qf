<h2>Edit Dimension</h2>
<% semantic_form_for @opinion do |f| %>
  <% f.inputs :for => :dimension do |dim| %> 
    <%= dim.input :name %>
    <%= f.input :low_text %>
    <%= f.input :high_text %>
    <%= dim.input :desc %>
    <%= dim.input :concepts, :label => "Apply to:" %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Update" %>
  <% end %>
<% end %>