<h2>Value Dimensions</h2>

<table>
  <% @opinion_dimensions.each do |dim| %>
    <tr>
      <td class="span-4 last">
        <%= link_to dim.name, dim %>
      </td>
      <td>
        <%= dim.type_s %>
      </td>
      <% if current_user %>
        <td>
          <%= edit_delete_opinion_dimension(dim) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>


<% if role? 'staff' %>
  <h4>Facts</h4>
  <table>
    <% @fact_dimensions.each do |dim| %>
      <tr>
        <td class="span-4 last">
          <%= link_to dim.name, dim %>
        </td>
        <td>
          <%= dim.type_s %>
        </td>
        <td>
          <%= edit_delete_fact_dimension(dim) %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
