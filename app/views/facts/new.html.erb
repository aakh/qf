<h2>New Fact</h2>
<% semantic_form_for @fact do |f| %>
  <% f.inputs :for => :dimension do |dim| %> 
    <%= dim.input :name %>
    <%= f.input :template %>
    <%= dim.input :desc %>
    <%= dim.input :concepts, :label => "Apply to:" %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Add Fact" %>
  <% end %>
<% end %>