
<ul>
  <li><%= link_to "Home", root_path %></li>
  <% if current_user %>
    <li><%= link_to "Edit profile", edit_user_path(:current) %></li>
    <li><%= link_to "Logout", logout_path %></li>
  <% else %>
    <li><%= link_to "Login", login_path %></li>
    <li><%= link_to "Sign up", signup_path %></li>
  <% end %>
  <li><%= link_to "Help", help_path %></li>
<% if current_user and (current_user.has_role? 'Administrator' or current_user.has_role? 'Manager') %>
  <br>
  <hr>
  <% if current_user and current_user.has_role? 'Administrator' %>
    <li><%= link_to "View Users", users_path %></li>
  <% end %>
  <% if current_user and current_user.has_role? 'Manager' %>
    <li><%= link_to "Add Menu Category", new_concept_path %></li>
    <li><%= link_to "Add Menu Item", new_entity_path %></li>
    <li><%= link_to "View Menu Items", concepts_path %></li>
  <% end %>
<% end %>
</ul>  