<h2>Listing Menu Items</h2>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @entities.each do |entity| %>
    <tr>
      <td><%=h entity.name %></td>
      <td><%= link_to "Show", entity %></td>
      <td><%= link_to "Edit", edit_entity_path(entity) %></td>
      <td><%= link_to "Delete", entity, :confirm => "Are you sure?", :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "New Menu Item", new_entity_path %>